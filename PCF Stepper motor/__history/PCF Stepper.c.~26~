/*****************************************************************************/
// Código para realizar escritura digital en el PCF8574AP, esto para controlar
// dos motores a paso bipolares
// Desarrollado por: Gustavo Trejo -Agosto de 2021
/*****************************************************************************/
#INCLUDE<16F887.h>
#DEVICE ADC=10
#FUSES XT,PUT,NOPROTECT,BROWNOUT,NOLVP,WDT
#USE delay(internal=8000000)
#USE I2C(MASTER, SDA=PIN_C4, SLOW, SCL=PIN_C3, NOFORCE_SW)
#use standard_io(c)

#BYTE PORTA=5;
#BYTE PORTB=6;

#DEFINE M1D PORTA,0
#DEFINE M1I PORTA,1
#DEFINE M2D PORTA,2
#DEFINE M2I PORTA,3


/***************************Variables globales********************************/
int16 M1V=0; 
int16 M2V=0;
unsigned int8 data=0;
int8 btns1=0;
int8 btns2=0;
void main(){
set_tris_a(0b1111111);
set_tris_b(0);
setup_adc_ports(0x96); //AN5 y AN6
setup_adc(adc_clock_internal);
setup_wdt(WDT_2304MS); //config del watchdog cada 2.304 segundos

while(true){
   set_adc_channel(5);
   delay_ms(1);
   M1V=read_adc();
   
   set_adc_channel(6);
   delay_ms(1);
   M2V=read_adc();
   
   
   if(bit_test(M1D)&&!bit_test(M1I)){
      btns1=5;
   }
   else if(bit_test(M1I)&&!bit_test(M1D)){
      btns1=7;
   }
   else{
      btns1=8;
   }
      
   if(bit_test(M2D)&&!bit_test(M2I)){
      btns2=5;
   }
   else if(bit_test(M2I)&&!bit_test(M2D)){
      btns2=7;
   }
   else{
      btns2=8;
   }
  
   i2c_start();
   i2c_write(0x70); 
   data=(btns1*16)+btns2;
   PORTB=data;
   i2c_write(data);
   delay_ms(M1V);
   i2c_write(136);
   i2c_stop();
   restart_wdt();
}
}
